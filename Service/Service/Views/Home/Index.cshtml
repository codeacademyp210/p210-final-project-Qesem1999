@model Service.ViewModel.AloViewModel

@{
    ViewBag.Title = "Home Page";
    var i = 0;
    var cls = "";
}

@section styles{

    <!--page level css -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Public/css/slick.css">
    <link rel="stylesheet" href="~/Public/css/slick-theme.css">
    <link rel="stylesheet" href="~/Public/sass/style.css">


}


<main>
    <section class="container-fluid slider p-0">
        <div class="row m-0">


            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner slider-inner">
                    @foreach (var item in Model.HomeSlider)
                    {
                        i++;
                        if(i == 1) { cls = "active"; }
                        else { cls = ""; }

                        <div class="carousel-item @cls  slideItem">
                            <img src="~/Public/image/@item.Image" class="d-block w-100 img-fluid" alt="...">
                            <div class="firstSlide">
                                <h1>@item.Header</h1>
                                <h5> @item.Context </h5>
                            </div>
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

    </section>

    <section class="container-fluid bg">
        <div class="container">
            <div class="row xidmet">
                <div class="xidmetSectionHead col-lg-12">
                    <h1>Ustun Tuturuq</h1>
                </div>
                @foreach (var item in Model.UstunContent)
                {
                    <div class="col-lg-4 ">
                        <div class="xidmetDiv">
                            <div>
                                <i class="@item.Icon"></i>
                                <span>@item.Number</span>
                            </div>
                            <div>
                                <h5>@item.Hearder</h5>
                                <p>@item.Context</p>
                            </div>
                            <div>
                                <a href="@Url.Action("About", "Home")">Go to view</a>

                            </div>
                        </div>

                    </div>
                }
                
            </div>

        </div>

    </section>
    <section id="xidmetler">
        <div class="container">
            <div class="row ">
                <div class="col-lg-12 serviceFirst">
                    <h1>XİDMƏTLƏR</h1>
                </div>
                @foreach (var item in Model.XidmetContent)
                {

                    <div class="col-lg-6 ">
                        <div class="row service">
                            <div class="col-lg-6">
                                <img src="~/Public/image/@item.Image" alt="">
                            </div>
                            <div class="col-lg-6">
                                <div>
                                    <h6>@item.Header</h6>

                                    <p>
                                        @item.Context
                                    </p>
                                    <a href="@Url.Action("Index", "Service")/#Firstservice">Ətraflı</a>
                                </div>
                            </div>
                        </div>

                    </div>
                }

                

            </div>
        </div>
      
    </section>

    <section class="container-fluid">
        <div class="row homeAbout">
            <div class="col-lg-12 overlay">
                @foreach (var item in Model.AutoPlanet.Take(1))
                {
                    <div class="overlayContent">
                        <h1>@item.Header</h1>
                        <p>
                            @item.Context
                        </p>
                        <a href="@Url.Action("About", "Home")">Ətraflı</a>
                    </div>
                }

            </div>
        </div>
    </section>

    <section class="container-fluid">
        <div class="row marka">
            @foreach (var item in Model.HomeSliderSlick)
            {
                <div><img src="~/Public/image/@item.Image" alt=""></div>
                
            }



        </div>
    </section>

</main>

@section scripts{

    <script src="~/Public/js/jquery-3.4.1.js"></script>
    <script src="~/Public/js/slick.js"></script>
    <script src="~/Public/js/script.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="~/Public/js/checkout.js"></script>
    <script src="~/Public/js/main.js"></script>


}