
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutTemplete.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login | Fit2Go Admin Template</title>
    <link rel="shortcut icon" href="favicon.ico" />
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- global level css -->
    <link href="~/Areas/Admin/Public/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/Admin/Public/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- end of global css-->
    <!-- page level styles-->
    <link href="~/Areas/Admin/Public/vendors/iCheck/skins/all.css" rel="stylesheet" type="text/css">
    <link type="text/css" href="~/Areas/Admin/Public/vendors/bootstrapvalidator/dist/css/bootstrapValidator.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Public/css/custom_css/login.css" rel="stylesheet" type="text/css">
    <!-- end of page level styles-->
</head>

<body>
    <div class="container">
        <div class="full-content-center">
            <div class="box bounceInLeft animated">
                <h3>
                    Email = Admin@gmail.com <br />
                    Password = Admin1234
                </h3>
                <img src="~/Areas/Admin/Public/img/logo.png" class="logo" alt="image not found">
                <h3 class="text-center">User Log In</h3>

                <form class="form" action="@Url.Action("Login", "Login")" method="post">
                    <div class="form-group">
                        @*@Html.LabelFor(l => l.Username, new { @class = "sr-only" })
                        @Html.TextBoxFor(l => l.Username, new { @class = "form-control", name = "email", placeholder = "Email", required = true })*@
                        <input type="text" name="Username" class="form-control" placeholder="Username" required/>
                    </div>
                    <div class="form-group">
                        @*@Html.LabelFor(l => l.Password, new { @class = "sr-only" })
                        @Html.PasswordFor(l => l.Password, new { @class = "form-control", name = "password", placeholder = "Password", required = true })*@
                        <input type="password" name="Password" class="form-control" placeholder="Password" required />

                    </div>
                    @if (@Session["loginError"] != null)
                    {
                        <div class="alert alert-danger">@Session["loginError"]</div>
                        Session["loginError"] = null;
                    }
                    <div class="checkbox text-left">
                        <label>
                            <input type="checkbox"> Remember Password
                        </label>
                    </div>
                    <input type="submit" class="btn btn-block btn-warning" value="Log In">
                </form>
                <p class="text-right"><a href="#" class="text-warning forgot_color" style="color: white">Forgot Password?</a></p>
            </div>
        </div>
    </div>
    <!-- global js -->
    <script src="~/Areas/Admin/Public/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/Public/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- end of global js -->
    <!-- begining of page level js -->
    <script src="~/Areas/Admin/Public/vendors/iCheck/icheck.min.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/Public/vendors/bootstrapvalidator/dist/js/bootstrapValidator.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/Public/js/custom_js/login1.js" type="text/javascript"></script>
    <!-- end of page level js -->
</body>
</html>





